    <body>
        <nav id="navfix" class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                      <span class="sr-only">Toggle navigation</span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                    </button>

                    <a class="navbar-brand" href="/">Dez.tw</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                  <ul class="nav navbar-nav">
                    <li class="<%= typeof page !== 'undefined' && page === 'posts' ? 'active' : '' %>">
                      <a href="/posts">
                        Home
                      </a>
                    </li>
                    <!-- <li class="<%= typeof page !== 'undefined' && page === 'archive' ? 'active' : '' %>"><a href="/archive">Archive</a></li> -->
                    <li class="<%= typeof page !== 'undefined' && page === 'about' ? 'active' : '' %>">
                      <a href="/about">
                        About
                      </a>
                    </li>
                    <li id="gotop">
                      <a href="#">
                        Gotop
                      </a>
                    </li>
                  </ul>
                  <ul class="nav navbar-nav navbar-right">
                      <% if(!currentUser){ %>
                          <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a href="/login">Log In</a></li>
                          <li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"><a href="/register">Sign Up</a></li>
                      <% } else if(currentUser.username === 'dez'){ %>
                          <li><a href="/posts/new">Add a new post</a></li>
                          <li><a href="/profile">Hi, <%= currentUser.username %></a></li>
                          <li><a href="/logout">Log Out</a></li>
                      <% } else{ %>
                          <li><a href="/profile">Hi, <%= currentUser.username %></a></li>
                          <li><a href="/logout">Log Out</a></li>
                      <% }%>
                  </ul>
                </div>
            </div>
        </nav>
        <div class="container">
            <% if(error && error.length >0){%>
                <div class="alert alert-danger" role="alert">
                    <%= error%>
                </div>
            <% }%>
            <% if(success && success.length >0){%>
                <div class="alert alert-success" role="alert">
                    <% if(success[0] === "Welcome, ") { %>
                      <%= success[0] + currentUser.username.split("")[0].toUpperCase() + currentUser.username.slice(1) + "!" %>
                    <% } else { %>
                      <%= success %>
                    <% } %>
                </div>
            <% }%>
        </div>
        <div id="header" class="container">
